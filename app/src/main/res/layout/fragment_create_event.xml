<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white">
    <com.bkplus.scan_qrcode_barcode.base.BaseToolBar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_17"
            android:background="@color/white"
            android:gravity="center">

            <com.bkplus.scan_qrcode_barcode.ui.qrcode.widget.BaseInputFieldView
                android:id="@+id/eventTitle"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.bkplus.scan_qrcode_barcode.ui.qrcode.widget.BaseInputFieldView
                android:id="@+id/eventCreate"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.bkplus.scan_qrcode_barcode.ui.qrcode.widget.BaseInputSelectionView
                android:id="@+id/eventDate"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.bkplus.scan_qrcode_barcode.ui.qrcode.widget.BaseInputFieldView
                android:id="@+id/eventAddress"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCreateQRCode"
                android:layout_width="172dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="@dimen/dp_17"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_button_create_qrcode_2"
                android:text="Create Event"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/_35sdp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>